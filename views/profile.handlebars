<main class="min-vh-100">
    <!-- This div will display user-specific databases and images -->
    <div class="container mt-4 py-4 text-bg-dark border border-4 border-primary rounded-5 shadow">
        <section id="profile-section">
            <div class="container-lg">

                <h3 class="text-center m-4 fs-1">Welcome to your profile:</h3>
                <h3 class="text-center m-4 fs-1">{{user.username}}</h3>

                <div class="row justify-content-between">
                    <div class="col">
                    </div>
                </div>


                {{#each user.posts}}
                <!-- Delete modal code -->
                <div class="modal" tabindex="-1" id="delete-post-modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Modal title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Modal body text goes here.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border border-3 border-primary rounded-5 bg-dark text-light m-4">
                    <div class="card-body mx-4">
                        <div class="row justify-content-between">
                            <div class="col-9">
                                <h5 class="card-title fs-1">{{this.post_title}}</h3>
                                <h6 class="card-subtitle">By {{this.post_author}}</h6>
                            </div>
                            <div class="col-3">
                                <button type="button" class="btn btn-lg btn-danger m-4 float-end" id="delete-post-btn"
                                    data-bs-toggle="modal" data-bs-target="#delete-post-modal">Delete</button>
                            </div>
                        </div>

                        <hr />

                        <p class="card-body">{{this.post_content}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</main>